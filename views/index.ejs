<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="./assets/index.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
  </head>
  <body>
    <div class="search_div">
      <input id="search_input" type="search" placeholder="search" />
      <a id="search_a"><button id="search_btn" type="search">Go</button></a>
    </div>
    <div>
      <% for (var i = 0; i < items.length; i++) { %>
      <h4><%= items[i].name %></h4>
      <% } %>
    </div>
    <script type="text/javascript">
      search_btn = document.getElementById("search_button");
      search_input = document.getElementById("search_input");
      search_a = document.getElementById("search_a");
      search_input.onkeypress = function () {
        /* console.log(search); */
        setTimeout(10);
        search_a.setAttribute("href", `/search/${search_input.value}`);
      };
      /* search_btn.onclick = function () {
        search_a.setAttribute("href", `/search/name=${search_input.value}`);
      }; */
    </script>
  </body>
</html>
